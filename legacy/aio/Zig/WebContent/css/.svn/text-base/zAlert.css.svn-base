/** The full screen overlay under the popup */
#zAlert.zalert-overlay {
	background-color: rgba(128, 128, 128, 0.5);
}

/** The popup div */
#zAlert .zalert-popup {
	width: 75%;
	max-width: 320px;
	margin: 0 auto;
	padding: 0 15px 0 15px;
	background-color: white;
	box-shadow: 2px 2px 6px #888;
	-webkit-border-radius: 8px;
}

/** The alert title*/
#zAlert .zalert-header {
	font-family: AvantGardeMedium;
	text-align: center;
	overflow: hidden;
	text-overflow: ellipsis;
	padding-top: 15px;
}
/** The alert content*/
#zAlert .zalert-content {
	color: #404040;
	font-family: AvantGardeMedium;
	margin : 15px;
	text-align: center;
	font-size: 15px;
}
#zAlert .zalert-buttonbar {
	padding: 15px 0;
	width: 100%;
}
#zAlert .vertical .button + .button{
	margin-top: 10px;
}
#zAlert .zalert-buttonbar a.bleft{
	box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.2);
	color: white;
	height : 50px;
	display: inline-block;
	text-align: center;
 	line-height: 50px;
	-ms-box-sizing: border-box;
	box-sizing: border-box;
	background-color: #a6a6a6;
}
#zAlert .horizontal .zalert-buttonbar a.bleft{
	margin: 0;
	width: 47%;
}
	

#zAlert .zalert-buttonbar a.bright{
	box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.2);
	background-color: #29858F;
	color: white;
	height : 50px;
	display: inline-block;
	text-align: center;
 	line-height: 50px;
	-ms-box-sizing: border-box;
	box-sizing: border-box;
}
#zAlert .horizontal .zalert-buttonbar a.bright{
	margin: 0;
}
#zAlert .horizontal .zalert-buttonbar a.bleft + a.bright{
	float : right;
	width: 47%;
}

#zAlert .zalert-buttonbar a{
	font-family: AvantGardeMedium;
	box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.2);
	background-color: #29858F;
	color: white;
	width: 100%;
	height : 50px;
	display: block;
	text-align: center;
	line-height: 50px;
	overflow: hidden;
}
#zAlert .zalert-buttonbar a:hover{
	opacity: 0.8;
}

@media screen and (min-width: 720px) {
	#zAlert .zalert-popup {
		-webkit-border-radius: 16px;	
	}
	#zAlert .zalert-header {
		font-size: 70px;
	}
	#zAlert .zalert-content {
		margin : 20px;
		text-align: center;
		font-size: 30px;
	}
	#zAlert .zalert-buttonbar a.bleft{
		height : 80px;
 		line-height: 90px;
		font-size: 40px
	}
	#zAlert .zalert-buttonbar a.bright{
		height : 80px;
		line-height: 90px;
		font-size: 40px
	}
	#zAlert .zalert-buttonbar a{
		height : 60px;
 		line-height: 70px;
		font-size: 40px
	}
	#zAlert .zalert-popup {
		max-width: 500px;
	}
}
